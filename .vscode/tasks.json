{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "docker-build",
            "label": "docker-build: release",
            "dependsOn": [
                "build"
            ],
            "dockerBuild": {
                "tag": "recipeappmaui:latest",
                "dockerfile": "${workspaceFolder}/RecipeAppApi/Dockerfile",
                "context": "${workspaceFolder}",
                "platform": "linux/amd64",
                "pull": true
            },
            "netCore": {
                "appProject": "${workspaceFolder}/RecipeAppApi/RecipeAppApi.csproj"
            }
        },
        {
            "type": "docker-run",
            "label": "docker-run: debug",
            "dependsOn": [
                "docker-build: debug"
            ],
            "dockerRun": {},
            "netCore": {
                "appProject": "${workspaceFolder}/RecipeAppApi/RecipeAppApi.csproj",
                "enableDebugging": true
            }
        },
        {
            "type": "docker-run",
            "label": "docker-run: release",
            "dependsOn": [
                "docker-build: release"
            ],
            "dockerRun": {},
            "netCore": {
                "appProject": "${workspaceFolder}/RecipeAppApi/RecipeAppApi.csproj"
            }
        }
    ]
}